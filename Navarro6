// program #06: Average mark

#include <iostream>
using namespace std;

int main() {
int markA, markB, markC, totalSum;
float averageMark;
cout<<"please enter the mark of the first student: ";
cin>>markA;
cout<<"please enter the mark of the second student: ";
cin>>markB;
cout<<"please enter the mark of the third student: ";
cin>>markC;
totalSum = markA + markB + markC;
averageMark = (float) totalSum / 3; // typecasting
cout<<"the average mark of the third student is "<<averageMark;
}
