#include <iostream>
#include <string>
#include <vector>

using namespace std;

int main() {
    string hiddenWord = "encyclopedia";
    int lives = 3;
    string revealedWord(hiddenWord.length(), '*');

    while (lives > 0 && revealedWord != hiddenWord) {
        cout << "Hidden word is made up of " << hiddenWord.length() << " letters. (" << lives << " lives remaining)" << endl;
        cout << revealedWord << endl;
        char guess;
        cout << "Guess the letter: ";
        cin >> guess;

        bool correctGuess = false;
        for (int i = 0; i < hiddenWord.length(); ++i) {
            if (hiddenWord[i] == guess) {
                revealedWord[i] = guess;
                correctGuess = true;
            }
        }

        if (!correctGuess) {
            lives--;
        }
    }

    if (revealedWord == hiddenWord) {
        cout << "Congratulations! You guessed the word: " << hiddenWord << endl;
    } else {
        cout << "You ran out of lives. The word was: " << hiddenWord << endl;
    }

    return 0;
}
